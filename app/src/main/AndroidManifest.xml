<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.project.donate">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/donatelogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LogIn"
            android:screenOrientation="portrait"
            android:theme="@style/Login"></activity>
        <activity
            android:name=".About"
            android:parentActivityName=".MainUi"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SignUp"
            android:screenOrientation="portrait"
            android:theme="@style/Login" />
        <activity
            android:name=".Temp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Cart"
            android:parentActivityName=".MainUi"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".AccountSettings" />
        <activity
            android:name=".RateUs"
            android:parentActivityName=".MainUi"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RateTheme.Light.NoActionBar"/>
        <activity
            android:name=".CreditsUI"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".History"
            android:parentActivityName=".MainUi"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainUi"
            android:label="@string/title_activity_main_ui"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".model.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".model.NgoList"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".EditDetail"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".ngolocator.Gallerys"></activity>
    </application>

</manifest>