<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.project.donate">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LogIn"
            android:theme="@style/Login">

        </activity>
        <activity
            android:name=".SignUp"
            android:theme="@style/Login" />
        <activity android:name=".Temp" />
        <activity
            android:name=".Cart"
            android:parentActivityName=".MainUi"
            android:theme="@style/AppTheme" />
        <activity android:name=".History"
            android:parentActivityName=".MainUi"/>
        <activity android:name=".AccountSettings" />
        <activity android:name=".CreditsUI"
            android:parentActivityName=".MainUi"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MainUi"
            android:label="@string/title_activity_main_ui"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".model.Splash"
            android:theme="@style/Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".model.NgoList"
            android:parentActivityName=".MainUi"></activity>
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EditDetail"></activity>
    </application>

</manifest>